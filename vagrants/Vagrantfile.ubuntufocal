#############################################
# ubuntu20.04 + install ansible
#############################################

Vagrant.configure("2") do |config|

  # get box
  config.vm.define "ubuntufocal" do |ubuntufocal|
    ubuntufocal.vm.box = "ubuntu/focal64"
  end

  # install ansible
  config.vm.provision "shell", inline: <<-SHELL
    apt update &&
    apt install ansible -y &&
    ansible --version
    SHELL
end
